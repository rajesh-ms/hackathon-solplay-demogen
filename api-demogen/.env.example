# Environment Configuration
NODE_ENV=development
PORT=3001

# API Configuration
API_VERSION=v1
API_BASE_PATH=/api/v1

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=1h
API_KEY_PREFIX=demogen_dev_
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_BURST=10

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/api_demogen_dev
REDIS_URL=redis://localhost:6379

# Azure Configuration
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# v0.dev Configuration (Updated for 2025 API)
V0_API_KEY=your-v0-api-key-from-v0.dev-settings
V0_BASE_URL=https://api.v0.dev
V0_MAX_TOKENS=4000
V0_TIMEOUT_MS=30000

# Azure OpenAI Configuration (Enhanced)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_API_VERSION=2024-04-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-1106-preview
AZURE_OPENAI_MAX_TOKENS=4000
AZURE_OPENAI_TEMPERATURE=0.7
AZURE_OPENAI_TOP_P=0.9
AZURE_OPENAI_PRESENCE_PENALTY=0.1
AZURE_OPENAI_FREQUENCY_PENALTY=0.1

# Authentication (Recommended: Managed Identity)
USE_MANAGED_IDENTITY=true
AZURE_CLIENT_ID=your-managed-identity-client-id
AZURE_TENANT_ID=your-tenant-id

# Enhanced Demo Features
ENABLE_AI_CONTENT_ENHANCEMENT=true
AI_CONTENT_CACHE_TTL=7200
DEMO_GENERATION_TIMEOUT_MS=60000
MAX_PARALLEL_AI_REQUESTS=3

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# Security Headers
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
HELMET_CSP_ENABLED=true

# Demo Configuration
DEMO_CACHE_TTL=3600
MAX_DEMO_SIZE_MB=10
DEMO_CLEANUP_INTERVAL_HOURS=24

# Monitoring
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL_MS=30000