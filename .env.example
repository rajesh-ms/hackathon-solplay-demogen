# Environment Configuration
NODE_ENV=development

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai-endpoint.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-01

# Azure Document Intelligence
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-doc-intel-endpoint.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_API_KEY=your-doc-intel-api-key

# Database Configuration
COSMOS_DB_ENDPOINT=https://your-cosmosdb-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmosdb-key
COSMOS_DB_DATABASE_NAME=solplay-demogen

# Redis Configuration
REDIS_CONNECTION_STRING=your-redis-connection-string

# Storage Configuration
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=solplay-documents

# API Configuration
API_PORT=3001
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Security Configuration
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# ARIA v4 Configuration
ARIA_MAX_CONCURRENT_SESSIONS=10
ARIA_SESSION_TIMEOUT=3600000
ARIA_WORKFLOW_TIMEOUT=1800000

# Demo Generation Configuration
DEMO_GENERATION_TIMEOUT=300000
MAX_DEMO_SIZE_MB=100
DEMO_RETENTION_DAYS=30