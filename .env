# SolPlay DemoGen Environment Configuration
# Copy this file to .env.local and fill in your actual API keys and endpoints

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================

# Main AI provider strategy: 'hybrid', 'openai', 'v0', 'mock'
# 'hybrid' = Azure OpenAI for PDF analysis + v0.dev for demo generation (RECOMMENDED)
# 'openai' = OpenAI for both PDF analysis and demo generation
# 'v0' = v0.dev for both (limited PDF analysis capabilities)
# 'mock' = Mock providers for development/testing
AI_PROVIDER=hybrid

# Specific provider assignments (used when AI_PROVIDER=hybrid)
USE_CASE_EXTRACTION_PROVIDER=azure-openai
DEMO_GENERATION_PROVIDER=v0

# =============================================================================
# AZURE OPENAI CONFIGURATION (for PDF analysis and use case extraction)
# =============================================================================

# Your Azure OpenAI API key from Azure portal
AZURE_OPENAI_API_KEY=59ba1e8c66c8493ebc36f529ba6d034f

# Your Azure OpenAI endpoint (e.g., https://your-resource.openai.azure.com/)
AZURE_OPENAI_ENDPOINT=https://aoai-q2w5uxlkh4c6o.openai.azure.com/

# Azure OpenAI API version (recommended: 2024-02-15-preview)
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Your deployed model name in Azure OpenAI (e.g., gpt-4, gpt-35-turbo)
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4.1

# Optional: Azure OpenAI organization ID
AZURE_OPENAI_ORGANIZATION=

# =============================================================================
# V0.DEV SDK CONFIGURATION (for React demo generation)
# =============================================================================

# Your v0.dev API key from v0.dev dashboard
V0_API_KEY=v1:v2JnnoRtT8JqfK1PhnGXgwHs:t6M0O2APu7NPlFSZBAVOnm2O

# v0.dev API base URL (default: https://api.v0.dev)
V0_BASE_URL=https://api.v0.dev/v1

# v0.dev request timeout in milliseconds (default: 30000)
V0_TIMEOUT=30000

# v0.dev model preference (default: claude-3-5-sonnet-20241022)
V0_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# FALLBACK OPENAI CONFIGURATION (optional - for OpenAI provider mode)
# =============================================================================

# OpenAI API key (only needed if AI_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI organization ID (optional)
OPENAI_ORGANIZATION=

# OpenAI model for use case extraction (default: gpt-4)
OPENAI_MODEL=gpt-4

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Node.js environment
NODE_ENV=development

# Application port for Phase 1 backend
PORT=3001

# Cors origin for frontend requests
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# PDF PROCESSING CONFIGURATION
# =============================================================================

# Maximum PDF file size in MB (default: 10)
MAX_PDF_SIZE_MB=10

# PDF text extraction timeout in milliseconds (default: 30000)
PDF_EXTRACTION_TIMEOUT=30000

# =============================================================================
# DEMO GENERATION CONFIGURATION
# =============================================================================

# Maximum demo generation attempts (default: 3)
MAX_DEMO_GENERATION_ATTEMPTS=3

# Demo generation timeout in milliseconds (default: 60000)
DEMO_GENERATION_TIMEOUT=60000

# Enable synthetic data enhancement (default: true)
ENABLE_SYNTHETIC_DATA=true

# Default demo framework (default: react)
DEFAULT_DEMO_FRAMEWORK=react

# Default styling framework (default: tailwindcss)
DEFAULT_STYLING_FRAMEWORK=tailwindcss

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Log level: 'error', 'warn', 'info', 'debug' (default: info)
LOG_LEVEL=info

# Enable request logging (default: true)
ENABLE_REQUEST_LOGGING=true

# Enable performance monitoring (default: true)
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Enable mock mode for development without API keys (default: false)
ENABLE_MOCK_MODE=false

# Mock response delay in milliseconds (default: 2000)
MOCK_RESPONSE_DELAY=2000

# Enable verbose logging for debugging (default: false)
ENABLE_VERBOSE_LOGGING=false

# Enable API request caching for development (default: false)
ENABLE_API_CACHING=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT secret for API authentication (generate a strong random string)
JWT_SECRET=your_jwt_secret_here

# Session timeout in minutes (default: 60)
SESSION_TIMEOUT=60

# Enable rate limiting (default: true)
ENABLE_RATE_LIMITING=true

# Rate limit: requests per minute per IP (default: 100)
RATE_LIMIT_RPM=100

# =============================================================================
# FILE SYSTEM CONFIGURATION
# =============================================================================

# Path to docs folder (relative to project root, default: ./docs)
DOCS_FOLDER_PATH=./docs

# Path to generated demos output (default: ./generated-demos)
GENERATED_DEMOS_PATH=./generated-demos

# Enable file system watching for auto-regeneration (default: false)
ENABLE_FILE_WATCHING=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Maximum concurrent PDF processing (default: 3)
MAX_CONCURRENT_PDF_PROCESSING=3

# Maximum concurrent demo generation (default: 2)
MAX_CONCURRENT_DEMO_GENERATION=2

# Request queue size limit (default: 10)
REQUEST_QUEUE_SIZE=10

# Memory usage threshold in MB for warnings (default: 512)
MEMORY_WARNING_THRESHOLD=512

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features (default: false)
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable advanced prompt engineering (default: true)
ENABLE_ADVANCED_PROMPTING=true

# Enable demo caching (default: true)
ENABLE_DEMO_CACHING=true

# Enable use case validation (default: true)
ENABLE_USE_CASE_VALIDATION=true

# Enable automatic demo enhancement (default: true)
ENABLE_AUTO_ENHANCEMENT=true